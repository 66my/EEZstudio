    "@types/decompress": "^4.2.3",
    "@types/globby": "^8.0.0",
    "@types/jquery": "^3.3.4",
    "@types/lodash": "^4.14.110",
    "@types/marked": "^0.4.0",
    "@types/moment-duration-format": "^2.2.1",
    "@types/mousetrap": "^1.6.0",
    "@types/node": "^10.1.2",
    "@types/react": "^16.4.6",
    "@types/react-dnd": "^2.0.36",
    "@types/react-dnd-html5-backend": "^2.1.9",
    "@types/react-dom": "^16.0.6",
    "@types/react-transition-group": "^2.0.11",
    "@types/sharp": "^0.17.9",
    "@types/tinycolor2": "^1.4.0",
    "@types/usb": "^1.1.6",
