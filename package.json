{
    "name": "eezstudio",
    "author": "Envox",
    "description": "Cross-platform visual development tool and SCPI instrument controller",
    "homepage": "https://github.com/eez-open/studio",
    "version": "0.9.5",
    "revision": "1",
    "license": "GPL-3.0-only",
    "repository": "https://github.com/eez-open/psu-firmware",
    "main": "dist/main/main.js",
    "scripts": {
        "postinstall": "electron-rebuild",
        "start": "electron .",
        "build": "npm install && electron-rebuild && npm run build-src && npm run build-css",
        "build-src": "tsc && gulp release",
        "build-extensions": "cd extensions && tsc",
        "build-css": "npm run build-shared-css",
        "build-shared-css": "lessc --clean-css packages/eez-studio-ui/_stylesheets/main.less dist/eez-studio-ui/_stylesheets/main.css",
        "watch-all": "concurrently \"npm run watch\" \"npm run watch-less\"",
        "watch": "gulp debug && tsc --project tsconfig.dev.json",
        "watch-less": "node watch-less.js",
        "build-catalog": "cd extensions && tsc && node build-catalog.js",
        "build-extra-resource-json": "cd installation && tsc && electron extra-resource.js && cd ..",
        "build-installation": "npm run build-extra-resource-json && node installation/build-installation.js",
        "build-deb": "electron-installer-debian --src eezstudio-linux-x64/ --arch amd64 --config installation/linux_options_deb.json",
        "build-rpm": "electron-installer-redhat --src eezstudio-linux-x64/ --arch x86_64 --config installation/linux_options_rpm.json",
        "build-snap": "electron-installer-snap --src eezstudio-linux-x64/ --dest installation/linux --grade stable",
        "build-deb-all": "npm run build && npm run build-installation && npm run build-deb",
        "build-rpm-all": "npm run build && npm run build-installation && npm run build-rpm",
        "tslint": "tslint --project ./tsconfig.json 'packages/**/*.{ts,tsx}'",
        "tsc-version": "tsc --version",
        "electron-version": "electron --version",
        "build2": "npm run build-extra-resource-json && node installation/build-installation-new.js"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4
    },
    "devDependencies": {
        "@types/archiver": "^2.1.2",
