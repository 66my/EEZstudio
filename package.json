{
  "name": "eezstudio",
  "author": "Envox",
  "description": "EEZ Studio",
  "version": "0.8.0",
  "license": "GPL-3.0",
  "repository": "https://github.com/eez-open/psu-firmware",
  "main": "src/main/main.js",
  "scripts": {
    "postinstall": "electron-rebuild",
    "start": "electron .",
    "build": "npm install && electron-rebuild && npm run build-src && npm run build-css",
    "build-src": "cd src && tsc && gulp",
    "build-extensions": "cd extensions && tsc",
    "build-css": "npm run build-home-css && npm run build-instrument-css && npm run build-instrument-window-css && npm run build-project-editor-css && npm run build-test-css",
    "build-home-css": "lessc --clean-css src/home/_stylesheets/main.less src/home/_stylesheets/main.css",
    "build-instrument-css": "lessc --clean-css src/instrument/_stylesheets/instrument.less src/instrument/_stylesheets/instrument.css",
    "build-instrument-window-css": "lessc --clean-css src/instrument/_stylesheets/window.less src/instrument/_stylesheets/window.css",
    "build-project-editor-css": "lessc --clean-css src/project-editor/_stylesheets/main.less src/project-editor/_stylesheets/main.css",
    "build-test-css": "lessc --clean-css src/test/_stylesheets/main.less src/test/_stylesheets/main.css",
    "watch": "concurrently \"npm run watch-src\" \"npm run watch-less\"",
    "watch-src": "cd src && tsc --project tsconfig.dev.json",
    "watch-less": "node watch-less.js",
    "abc": "cd test/abc && tsc && browserify --debug main.js -o bundle.js",
    "update:packages": "node wipe-dependencies.js && rm -rf node_modules && npm update --save-dev && npm update --save",
    "build-installation": "node installation/build.js",
    "build-catalog": "cd extensions && tsc && node build-catalog.js"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 4
  },
  "devDependencies": {
    "@types/better-sqlite3": "^3.1.3",
    "@types/bootstrap": "^4.1.1",
