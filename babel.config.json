{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "node": "12.13"
                }
            }
        ],
        "@babel/typescript",
        "@babel/react"
    ],
    "plugins": [
        [
            "@babel/plugin-proposal-decorators",
            {
                "legacy": true
            }
        ],
        [
            "@babel/plugin-proposal-class-properties",
            {
                "loose": true
            }
        ]
    ]
}
